@model X.PagedList.IPagedList<Project.Models.Grade>
@using Project.Models
@using X.PagedList
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "學生成績";
}

<h1>學生成績</h1>
<form asp-action="Index" method="get" class="mb-3 d-flex">
    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control me-2" placeholder="搜尋姓名、學號、系所" />
    <button type="submit" class="btn btn-secondary">搜尋</button>
</form>

<p>
    <a class="btn btn-primary" href="/Scores/Create">新增成績</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model[0].StudentId)</th>
            <th>@Html.DisplayNameFor(model => model[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model[0].Department)</th>
            <th>@Html.DisplayNameFor(model => model[0].GradeLevel)</th>
            <th>@Html.DisplayNameFor(model => model[0].Email)</th>
            <th>@Html.DisplayNameFor(model => model[0].Score)</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StudentId</td>
                <td>@item.Name</td>
                <td>@item.Department</td>
                <td>@item.GradeLevel</td>
                <td>@item.Email</td>
                <td>@item.Score</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.StudentId">編輯</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.StudentId">查看</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.StudentId">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchString = ViewData["CurrentFilter"] }))

</div>